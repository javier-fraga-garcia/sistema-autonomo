---
import Logo from "./Logo.astro";
const pages = [
  { href: "/", text: "Inicio" },
  { href: "/articles", text: "Artículos" },
  { href: "/about", text: "Sobre nosotros" },
  { href: "/contact", text: "Contacto" },
];

const { pathname } = Astro.url;
---

<header>
  <a href="/" class="company-logo">
    <Logo className="logo" />
    <div class="company-name">
      <p>Sistema <span>Autónomo</span></p>
    </div>
  </a>
  <nav class="menu">
    <button class="hamburguer">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentcolor"
        stroke="currentcolor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-menu-2"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M4 6l16 0"></path><path d="M4 12l16 0"></path><path d="M4 18l16 0"
        ></path>
      </svg>
    </button>
    <div class="menu-elements">
      {
        pages.map(({ href, text }) => (
          <a href={href} class:list={[{ active: href === pathname }]}>
            {text}
          </a>
        ))
      }
    </div>
  </nav>
</header>

<style>
  header {
    display: flex;
    position: relative;
    align-items: center;
    justify-content: space-between;
    background-color: white;
    width: 100%;
    height: 5rem;
    z-index: 100;
    cursor: pointer;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);

    .company-logo {
      text-decoration: none;
      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: center;

      &:visited {
        color: inherit;
      }

      .logo {
        height: 5rem;
      }

      .company-name {
        font-size: 1rem;
        font-weight: 500;

        span {
          display: block;
          font-weight: bold;
        }
      }
    }

    .menu {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding-right: 1rem;

      .hamburguer {
        display: flex;
        background-color: white;
        border: none;
        cursor: pointer;

        svg {
          height: 2.5rem;
        }
      }

      .menu-elements {
        display: flex;
        opacity: 0;
        position: absolute;
        flex-direction: column;
        left: 0;
        top: 5rem;
        width: 100%;
        padding: 2rem;
        background-color: white;
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
        gap: 1.5rem;
        align-items: center;
        border-top: 1px solid #eee;
        cursor: pointer;
        transition: opacity 0.3s ease;
        pointer-events: none;

        a {
          text-decoration: none;
          color: #333;
          font-weight: 500;
          font-size: 1.2rem;

          &.active {
            color: var(--primary);
            text-decoration: underline;
          }
        }
        &.is-active {
          opacity: 1;
          pointer-events: auto;
        }
      }
    }

    @media (min-width: 600px) {
      justify-content: space-between;
      padding: 0 2rem;

      .menu {
        .hamburguer {
          display: none;
        }

        .menu-elements {
          display: flex;
          position: static;
          flex-direction: row;
          width: auto;
          padding: 0;
          background-color: transparent;
          box-shadow: none;
          border-top: none;
          opacity: 1;
          pointer-events: auto;
        }
      }
    }
  }
</style>

<script>
  const hamburguer = document.querySelector(".hamburguer");
  const menuElems = document.querySelector(".menu-elements");

  hamburguer?.addEventListener("click", () => {
    menuElems?.classList.toggle("is-active");
  });
</script>
